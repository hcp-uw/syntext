{
  "compilerOptions": {
    "sourceMap": true,
    "esModuleInterop": true,
    "allowJs": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "strict": true,
    "lib": ["es2021"],
    "module": "commonjs",
    "target": "es2018",
    "baseUrl": "./server",
    "paths": {
      "*": ["node_modules/*", "src/types/*"]
    },
    "typeRoots": ["node_modules/@types", "src/types"],
    "outDir": "./build"
  },
  "include": ["./src/**/*", "jest.config.js"],
  "exclude": ["node_modules", "../client/*"]
}
